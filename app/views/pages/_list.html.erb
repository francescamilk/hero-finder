<div class="container">
  <% unless @characters.empty? %>
    <h2>Characters</h2>
    <div class="cards">
      <% @characters.each do |chr| %>
        <div class="card">
          <div class="card-title">
            <h3><%= chr.name %></h3>
          </div>
          <% chr_img = "#{chr.thumbnail.path}.#{chr.thumbnail.extension}" %>
          <div class="card-img">
            <%= image_tag(chr_img) %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  <% unless @comics.empty? %>
    <h2>Comics</h2>
    <div class="cards">
      <% @comics.each do |cmc| %>
        <div class="card">
          <div class="card-title">
            <h3><%= cmc.title %></h3>
          </div>
          <% cmc_img = "#{cmc.thumbnail.path}.#{cmc.thumbnail.extension}" %>
          <div class="card-img">
            <%= image_tag(cmc_img) %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  <% unless @series.empty? %>
    <h2>Series</h2>
    <div class="cards">
      <% @series.each do |srs| %>
        <div class="card">
          <div class="card-title">
            <h3><%= srs.title %></h3>
          </div>
          <% srs_img = "#{srs.thumbnail.path}.#{srs.thumbnail.extension}" %>
          <div class="card-img">
            <%= image_tag(srs_img) %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  <% unless @creators.empty? %>
    <h2>Creators</h2>
    <div class="cards">
      <% @creators.each do |crt| %>
        <div class="card">
          <div class="card-title">
            <h3><%= crt.fullName %></h3>
          </div>
          <% crt_img = "#{crt.thumbnail.path}.#{crt.thumbnail.extension}" %>
          <div class="card-img">
            <%= image_tag(crt_img) %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
