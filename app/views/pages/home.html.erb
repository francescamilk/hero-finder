<header>
  <%= image_tag 'bg.jpg', id: 'bg' %>
  <%= image_tag 'moon.png', id: 'moon' %>
  <%= image_tag 'cloud1.png', id: 'cloud1' %>
  <%= image_tag 'cloud2.png', id: 'cloud2' %>
  <%= image_tag 'jet.png', id: 'jet' %>
  <%= image_tag 'ironman.png', id: 'ironman' %>
</header>
<section id="main">
  <div class="container">
    <div class="search">
      <%= form_tag result_index_path, method: :get, class: 'form-search' do %>
        <%= text_field_tag :query,
            params[:query],
            class: 'input-search',
            placeholder: 'Search...'
          %>
        <%= button_tag(type: 'submit', class: 'btn-override') do %>
          <div class="btn-search">GO!</div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
