<div class="container">
  <div class="cards">
    <div class="card">
      <% unless @characters.empty? %>
        <h2>Characters</h2>
        <% @characters.each do |chr| %>
          <p><%= chr.name %></p>
        <% end %>
      <% end %>
    </div>
    <div class="card">
      <% unless @comics.empty? %>
        <h2>Comics</h2>
        <% @comics.each do |cmc| %>
          <p><%= cmc.title %></p>
        <% end %>
      <% end %>
    </div>
    <div class="card">
      <% unless @series.empty? %>
        <h2>Series</h2>
        <% @series.each do |srs| %>
          <p><%= srs.title %></p>
        <% end %>
      <% end %>
    </div>
    <div class="card">
      <% unless @creators.empty? %>
        <h2>Creators</h2>
        <% @creators.each do |crt| %>
          <p><%= crt.fullName %></p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
